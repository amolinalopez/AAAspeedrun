<div class="profile-page">

  <section class="userSection">
    <div class="flex-child one">
      <img class="profile-userImg" src="{{user.avatar}}" alt="User image" />
    </div>
    <div class="flex-child two">

      <h1>
        <span id="greetings">
        </span>
        {{user.username}}
      </h1>
      <ul class="userInfo">
        <li>{{user.coins}} coins</li>
        <li>{{user.country}}</li>
        <li>Premium:
          {{#if user.premium}} Yes ğŸ…
          {{else}} No ğŸˆšï¸
          {{/if}}
        </li>
      </ul>

    </div>
  </section>


  <section class="profile-user-runs">
    {{#each runs}}
    <div class="profile-run">

      <img src="{{gameID.cover}}" alt="game speedrun image" />

      {{!-- <h3 id="profile-rank">1</h3> --}}
      <h3 id="profile-gameName">{{gameID.title}}</h3>

      <div>
        <h3 class="profile-info-run">{{time_seconds}} </h3>
        <h3 class="profile-info-run">{{categoryID.name}}</h3>
      </div>
      <div>
        <h3 class="profile-info-run">{{date}}</h3>
        <a href="{{video}}"><span> <i class="fab fa-youtube fa-lg"></i></span></a>
      </div>
    </div>
    {{/each}}
</section>

</div>

<script src="/js/profile.js"></script>